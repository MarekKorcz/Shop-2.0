{% extends 'base.html.twig' %}

{% block body %}
    <h1>Category</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>NameUrl</th>
                <td>{{ category.nameUrl }}</td>
            </tr>
            <tr>
                <th>Products</th>
                <td>
                    {% for product in category.products %}
                        <ul>{{ product.name }}</ul>
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>
{% endblock %}
