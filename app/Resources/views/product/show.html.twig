{% extends 'base.html.twig' %}

{% block body %}
    <h1>Product</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Nameurl</th>
                <td>{{ product.nameUrl }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>ProductQuantity</th>
                <td>{{ product.productQuantity }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ product.category }}</td>
            </tr>
            <tr>
                <th>Images</th>
                <td>
                    {% for image in product.images %}
                        {{ image }}
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <td>
                    <a href="{{ path('cart_add', {'productId': product.id }) }}">Add to Cart</a>
                </td>
            </tr>
        </tbody>
    </table>
{% endblock %}